//insertion

#include <stdio.h>

int main() {
    int arr[100], n, pos, value;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    printf("Enter position and value to insert: ");
    scanf("%d %d", &pos, &value);
    for(int i = n; i > pos; i--)
        arr[i] = arr[i - 1];
    arr[pos] = value;
    n++;
    for(int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    return 0;
}


//deletion

#include <stdio.h>

int main() {
    int arr[100], n, pos;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    printf("Enter position to delete: ");
    scanf("%d", &pos);
    for(int i = pos; i < n - 1; i++)
        arr[i] = arr[i + 1];
    n--;
    for(int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    return 0;
}


//searching

#include <stdio.h>

int main() {
    int arr[100], n, value, found = 0;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    printf("Enter value to search: ");
    scanf("%d", &value);
    for(int i = 0; i < n; i++) {
        if(arr[i] == value) {
            printf("Value found at position %d\n", i);
            found = 1;
            break;
        }
    }
    if(!found)
        printf("Value not found\n");
    return 0;
}
